// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			//https://github.com/microsoft/vscode/blob/main/src/vs/workbench/contrib/tasks/common/problemMatcher.ts
			"problemMatcher": "$gulp-tsc6-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "npm",
			"script": "compile",
			"group": "build",
			"problemMatcher": [
				"$gulp-tsc6"
			],
			"label": "npm: compile"
		},
		{
			"type": "gulp",
			"task": "clean",
			"problemMatcher": [],
			"label": "gulp: clean"
		},
		{
			"type": "gulp",
			"task": "build",
			"group": "build",
			"problemMatcher": [
				"$gulp-tsc6"
			],
			"label": "gulp: build"
		},
		{
			"type": "gulp",
			"task": "publish",
			"problemMatcher": [
				"$gulp-tsc6"
			],
			"label": "gulp: publish",
			"detail": "vsce publish"
		},
		{
			"type": "gulp",
			"task": "package",
			"problemMatcher": [
				"$gulp-tsc6"
			],
			"label": "gulp: package",
			"detail": "vsce package"
		}
	]
}